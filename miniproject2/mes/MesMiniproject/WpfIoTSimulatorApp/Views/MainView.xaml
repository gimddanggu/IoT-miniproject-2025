<mah:MetroWindow x:Class="WpfIoTSimulatorApp.Views.MainView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfIoTSimulatorApp.Views"
        xmlns:mah="http://metro.mahapps.com/winfx/xaml/controls"
        xmlns:iconpack="http://metro.mahapps.com/winfx/xaml/iconpacks"
        mc:Ignorable="d"
        Title="IoT Device Simulator" Height="350" Width="600" ResizeMode="NoResize">
    <Grid Margin="5">
        <Grid.RowDefinitions>
            <RowDefinition Height="40" />
            <RowDefinition Height="1*" />
            <RowDefinition Height="50" />
        </Grid.RowDefinitions>

        <!-- UI 구성 -->
        <Label Grid.Row="0" Grid.Column="0" FontSize="20" FontWeight="Bold" Content="{Binding Greeting}"/>

        <!-- 컨텐츠 영역 -->
        <Grid Grid.Row="1" Grid.Column="0">
            <Grid.RowDefinitions>
                <RowDefinition Height="30"/>
                <RowDefinition Height="1*" />
            </Grid.RowDefinitions>
            <!-- Button 영역 -->
            <StackPanel Grid.Row="0" Orientation="Horizontal">
                <Button x:Name="BtnTest" Content="Test" Click="BtnTest_Click"/>
                <Button x:Name="BtnCheck" Content="check" Click="BtnCheck_Click"/>
            </StackPanel>
            <!-- HMI(Human Machine Interface) Like -->
            <Canvas Grid.Row="1">
                <Image x:Name="GearStart" Height="100" Width="80" Source="/Resources/gear.png" Canvas.Left="50" Canvas.Top="100"/>
                <Image x:Name="GearEnd" Height="100" Width="80" Source="/Resources/gear.png" Canvas.Right="50" Canvas.Top="100"/>
                <Image x:Name="SortingSensor" Height="45" Width="45" Source="/Resources/sensor.png" Canvas.Right="90" Canvas.Left="430" Canvas.Top="8" HorizontalAlignment="Left" VerticalAlignment="Center" />
                <Image x:Name="Belt" Height="144" Width="515" Source="/Resources/belt.png" 
               Canvas.Bottom="5" Canvas.Left="38" Canvas.Top="98" 
               HorizontalAlignment="Left" VerticalAlignment="Top" />
                <Rectangle x:Name="Product" Height="30" Width="30" Stroke="Black" Fill="Gray" Canvas.Left="100" Canvas.Top="68" HorizontalAlignment="Left" VerticalAlignment="Center"/>
            </Canvas>
        </Grid>
    </Grid>
</mah:MetroWindow>
