<mah:MetroWindow x:Class="WpfMrpSimulatorApp.Views.MainView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfMrpSimulatorApp.Views"
        xmlns:mah="http://metro.mahapps.com/winfx/xaml/controls"
        xmlns:iconPacks="http://metro.mahapps.com/winfx/xaml/iconpacks"
        xmlns:Dialog="clr-namespace:MahApps.Metro.Controls.Dialogs;assembly=MahApps.Metro"
        mc:Ignorable="d"
        Title="MainView" Height="450" Width="800" ResizeMode="NoResize"
        MinWidth="470" MinHeight="290"
        Dialog:DialogParticipation.Register="{Binding}" Closing="MetroWindow_Closing">
    <mah:MetroWindow.IconTemplate>
        <DataTemplate>
            <iconPacks:PackIconVaadinIcons Kind="Storage" Foreground="white"
                                           Margin="5,7,0,0"/>
        </DataTemplate>
    </mah:MetroWindow.IconTemplate>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="50"/>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="30"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1*"/>
            <ColumnDefinition Width="Auto"/>
        </Grid.ColumnDefinitions>
        <!-- UI 구성 중 메뉴-->
        <StackPanel Grid.Row="0" Grid.Column="0" Orientation="Horizontal">
            <Button Content="기본설정" FontSize="12" Background="OrangeRed" Margin="5"
                    Command="{Binding AppSettingCommand}">
                <Button.ContentTemplate>
                    <DataTemplate>
                        <StackPanel Orientation="Horizontal">
                            <Label Content="{Binding}" Foreground="White" VerticalAlignment="Center"/>
                            <iconPacks:PackIconVaadinIcons Kind="Cogs" Foreground="FloralWhite" Margin="0,6,0,0"/>
                            <!--왼/위/오/아-->
                        </StackPanel>
                    </DataTemplate>
                </Button.ContentTemplate>
            </Button>
            <Button Content="공정계획" FontSize="12" Background="DodgerBlue" Margin="5">
                <Button.ContentTemplate>
                    <DataTemplate>
                        <StackPanel Orientation="Horizontal">
                            <Label Content="{Binding}" Foreground="White"/>
                            <iconPacks:PackIconVaadinIcons Kind="Storage" Foreground="GhostWhite" Margin="0,4,0,0"/>
                        </StackPanel>
                    </DataTemplate>
                </Button.ContentTemplate>
            </Button>
            <Button Content="모니터링" FontSize="12" Background="LightSeaGreen" Margin="5">
                <Button.ContentTemplate>
                    <DataTemplate>
                        <StackPanel Orientation="Horizontal">
                            <Label Content="{Binding}" Foreground="White" VerticalAlignment="Center"/>
                            <iconPacks:PackIconUnicons Kind="EyeLine" Foreground="WhiteSmoke" Margin="0,5,0,0"/>
                        </StackPanel>
                    </DataTemplate>
                </Button.ContentTemplate>
            </Button>
            <Button Content="공정보고" FontSize="12" Background="DarkViolet" Margin="5">
                <Button.ContentTemplate>
                    <DataTemplate>
                        <StackPanel Orientation="Horizontal">
                            <Label Content="{Binding}" Foreground="White" VerticalAlignment="Center"/>
                            <iconPacks:PackIconUnicons Kind="FileGraphLine" Foreground="WhiteSmoke" Margin="0,5,0,0"/>
                        </StackPanel>
                    </DataTemplate>
                </Button.ContentTemplate>
            </Button>
        </StackPanel>
        <Button Grid.Row="0" Grid.Column="1" Content="앱 종료" FontSize="12" Background="SlateGray" Margin="5"
                Command="{Binding AppExitCommand}">
            <Button.ContentTemplate>
                <DataTemplate>
                    <StackPanel Orientation="Horizontal">
                        <Label Content="{Binding}" Foreground="White" VerticalAlignment="Center"/>
                        <iconPacks:PackIconEvaIcons Kind="PowerOutline" Foreground="AntiqueWhite" Margin="3,5,0,0"/>
                    </StackPanel>
                </DataTemplate>
            </Button.ContentTemplate>
        </Button>
        
        <!-- UI 구성 중 메인컨텐츠 영역 -->
        <ContentControl Grid.Row="1" Grid.ColumnSpan="2" Margin="2" Content="{Binding CurrentView}"/>

        <!-- UI 구성 중 상태바 -->
        <StatusBar Grid.Row="2" Grid.ColumnSpan="2">
            <StatusBarItem>
                <TextBlock Text="{Binding}" />
            </StatusBarItem>
            <Separator Background="White"/>
            <StatusBarItem HorizontalAlignment="Right">
                <TextBlock Text="{Binding CurrentTime}"/>
            </StatusBarItem>
            
        </StatusBar>

    </Grid>
</mah:MetroWindow>
